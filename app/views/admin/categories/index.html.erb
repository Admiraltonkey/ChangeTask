<h1 class="green"> <%= t('.title') %></h1>

<div class="buttons_panel">
  <%= link_to t('admin.categories.new.title'), new_admin_category_path, class: 'btn btn-outline-primary btn-sm' %>
</div>

<section id="categories">
  <table class="table">
      <thead>
        <tr>
          <th class="green">#</th>
          <th class="green"><%= t('activerecord.attributes.category.name') %></th>
          <th class="green"><%= t('activerecord.attributes.category.parent_id') %></th>
          <th></th>
        </tr>
      </thead>
    <tbody>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <td class="green"><%= index + 1 %></td>
          <td class="green"><%= category.name %></td>
          <td class="green"><%= category.parent.name if category.parent.present?%></td>
          <td>
            <%= link_to t('activerecord.attributes.category.change'), edit_admin_category_path(category), class: 'btn btn-outline-primary btn-sm' %>
            <%= link_to t('activerecord.attributes.category.delete'), admin_category_path(category), method: :delete, data: { confirm: 'Вы уверены?'}, class: 'btn btn-outline-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>