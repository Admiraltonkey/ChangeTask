<%= form_for([@post, @post.news.build]) do |f| %>
  <div class="form-group green">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group green">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <%= f.submit "Добавить",class: 'btn btn-primary' %>
<% end %>